<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalcButton">
        <item name="android:background">#fff</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#797979</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="NavButton">
        <item name="android:background">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#007AFF</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FuelText">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FuelInput">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_marginRight">5pt</item>
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:background">@drawable/edit_text_round</item>
        <item name="android:hint">"0"</item>
    </style>

    <style name="FuelLayout">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FuelTextUnits">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="PopupButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
