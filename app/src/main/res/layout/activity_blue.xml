<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2CAFF"
    android:orientation="vertical"
    tools:context=".BlueActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="Gorivo"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/title"
        android:id="@+id/mainPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/FuelLayout"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Cijena goriva" />

            <EditText
                android:id="@+id/fuelPrice"
                style="@style/FuelInput"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/FuelTextUnits"
                android:layout_height="wrap_content"
                android:text="kn/l" />

        </LinearLayout>

        <LinearLayout
            style="@style/FuelLayout"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Potrošnja" />

            <EditText
                android:id="@+id/usage"
                style="@style/FuelInput"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/FuelTextUnits"
                android:layout_height="wrap_content"
                android:text="1/100" />

        </LinearLayout>

        <LinearLayout
            style="@style/FuelLayout"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Udaljenost" />

            <EditText
                android:id="@+id/distance"
                style="@style/FuelInput"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/FuelTextUnits"
                android:layout_height="wrap_content"
                android:text="km" />
        </LinearLayout>

        <LinearLayout
            style="@style/FuelLayout"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Cijena puta" />

            <TextView
                android:id="@+id/tripPrice"
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0" />

            <TextView
                style="@style/FuelTextUnits"
                android:layout_height="wrap_content"
                android:text="kn" />
        </LinearLayout>

        <LinearLayout
            style="@style/FuelLayout"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Količina goriva" />

            <TextView
                android:id="@+id/fuelVolume"
                style="@style/FuelText"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0" />

            <TextView
                style="@style/FuelTextUnits"
                android:layout_height="wrap_content"
                android:text="l" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calculatorButton"
            style="@style/NavButton"
            android:text="Kalkulator" />

        <Button
            android:id="@+id/fuelButton"
            style="@style/NavButton"
            android:text="Gorvio" />

        <Button
            android:id="@+id/notesButton"
            style="@style/NavButton"
            android:text="Bilješke" />
    </LinearLayout>

</RelativeLayout>